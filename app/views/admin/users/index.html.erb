<div class="panel panel-rank">
	<div class="panel-heading">
	    <div>用户一览</div>
	</div> 
	
	<div class="panel-action">
	    <div class="navbar">
			<span class="pull-right"><%= link_to_icon "add", admin_users_new_path, :class => 'navbar-link'%></span>
		</div>
	</div> 

	<table class="table table-striped">
		<thead>
		    <tr>
		        <th>用户名</th>
		        <th>邮箱</th>
		        <th>登录次数</th>
		        <th></th>
		        <th></th>
		    </tr>
		</thead>

		<tbody>
		    <%@users.each do |user|%>
		    <tr>
			    <td><%= user.username%></td>
			    <td><%= user.email %></th>
				<td><%= user.sign_in_count%></td>	    	
			    <td><%= link_to_icon "edit", admin_users_edit_path(user)%></th>
			    <td><%= link_to_icon "delete", admin_users_destroy_path(user), method: :delete, data: { confirm: '确定删除吗?' }%></th>

		    </tr>
		    <%end%>
		</tbody>
	</table>
</div>