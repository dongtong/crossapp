
	<div class="row">
		<div class="col-lg-3"></div>

		<div class="col-lg-6">
			<div class="panel">
				<div class="panel-heading">
				    <h3 class="panel-title">编辑用户</h3>
				</div>
			  	<div class="panel-content">

					<%= form_for(@user, :url => admin_users_update_path, method: :put, :html => {:class => "form-horizontal"}) do |f| %>

						<div class="form-group">
						    <label for="username" class="col-lg-2 control-label">用户名</label>
						    <div class="col-lg-10">
						       <%= f.text_field :username, :autofocus => true,  :class => "form-control", :placeholder => "用户名" %>
						    </div>
					  	</div>

					  	<div class="form-group">
						    <label for="email" class="col-lg-2 control-label">邮箱</label>
						    <div class="col-lg-10">
						       <%= f.email_field :email, :class => "form-control", :placeholder => "邮箱" %>
						    </div>
					  	</div>

					  	<div class="form-group">
						    <label for="password" class="col-lg-2 control-label">密码</label>
						    <div class="col-lg-10">
						       <%= f.password_field :password, :class => "form-control", :placeholder => "密码" %>
						    </div>
					  	</div>

					  	<div class="form-group">
						    <label for="passwordConfirmation" class="col-lg-2 control-label">密码确认</label>
						    <div class="col-lg-10">
						        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "密码确认" %>
						   	    <%= f.submit "保存", :class => "btn btn-primary", :id => "sign_up_btn"%>
						    </div>
					  	</div>
					<% end %>
				</div>
			</div>
		</div><!--Login-->

		<div class="col-lg-3"></div>
	</div>


