<!-- Docs page layout -->
<div class="bs-header">
  <div class="container" id="app_carousel">
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
          <div class="bs-example">
    	      <div id="carousel-example-generic" class="carousel slide bs-docs-carousel-example">
    	        <ol class="carousel-indicators">
    	          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    	          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    	          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    	        </ol>
    	        <div class="carousel-inner">
                <% @portrait_pics.each_with_index do |pic, index|%>
                  <div class="item <%= "active" if index==0%>" style="width: 322px; height: 275px; text-align:center">
                    <%= link_to (image_tag pic.portrait_pic.url(:thumb), :width => "322px", :height => "100%"), show_app_path(pic.app_id) %>
                  </div>
                <%end%>
                <% @landscape_pics.each_with_index do |pic, index|%>
                  <div class="item <%= "active" if @portrait_pics.length == 0 && index==0%>" style="width: 322px; height: 275px; text-align:center">
                    <%= link_to (image_tag pic.landscape_pic.url(:thumb), :width => "322px", :height => "100%"), show_app_path(pic.app_id)%>
                  </div>
                <%end%>
    	        </div>
    	        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    	          <span class="icon-prev"></span>
    	        </a>
    	        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    	          <span class="icon-next"></span>
    	        </a>
    	      </div>
          </div>
        </div>
        <div class="col-lg-3 first-col">
          <div class="row app-block first-block">
            <div class="col-lg-12">
              <div class="thumbnail col-lg-7" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= @top_show_apps[0].name%>">
                <%if @top_show_apps[0]%>
                <%= image_tag @top_show_apps[0].app_icon.url, :style => "width:104px;height:120px;"%>
                <%end%>
              </div>
            </div>
          </div>
          <div class="row app-block second-block">
            <div class="col-lg-12">
              <div class="thumbnail col-lg-7" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= @top_show_apps[1].name%>">
                <%if @top_show_apps[1]%>
                <%= image_tag @top_show_apps[1].app_icon.url, :style => "width:104px;height:120px;"%>
                <%end%>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3 second-col">
          <div class="row app-block third-block">
            <div class="col-lg-12">
              <div class="thumbnail col-lg-7" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= @top_show_apps[2].name%>">
                <%if @top_show_apps[2]%>
                <%= image_tag @top_show_apps[2].app_icon.url, :style => "width:104px;height:120px;"%>
                <%end%>
              </div>
            </div>
          </div>
          <div class="row app-block">
            <div class="col-lg-12">
               <div class="thumbnail col-lg-7" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= @top_show_apps[3].name%>">
                <%if @top_show_apps[3]%>
                <%= image_tag @top_show_apps[3].app_icon.url, :style => "width:104px;height:120px;"%>
                <%end%>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-1"></div>
      </div>
	 
  </div>
</div>    

<div class="bs-example" id="android_rank"> 
  <div class="row">
    <div class="col-lg-1"></div>
  	<div class="col-lg-8">
    	<div class="panel panel-rank">
          <div class="panel-heading">应用列表</div> 
          <div class="row app-list">
            <% if @apps.size == 0%>
              <p>对不起,没有您要查找的应用。</p>
            <%else%>
              <%@apps[0..5].each do |app|%>
                <div class="col-lg-2">
                  <div class="thumbnail">
                    <div class="app-icon">
                      <%= image_tag app.app_icon.url(:thumb)%>  
                    </div>      
                    <div class="caption">
                      <p  class="title"><%= app.name%></p>
                      <p><%= app.category.name%></p>
                      <p><%= link_to "查看", show_app_path(app), :class => "btn btn-primary"%></p>
                    </div>
                  </div>
                </div>
              <%end%>
            <%end%>
    	    </div> 
          <% if @apps.size > 6%>
            <% ((@apps.size/6)-1).times do |index|%>
              <div class="row app-list pendding-row">
                <%@apps[((index+1)*6)...((index+2)*6)].each do |app|%>
                  <div class="col-lg-2">
                    <div class="thumbnail">
                      <div class="app-icon">
                        <%= image_tag app.app_icon.url(:thumb)%>  
                      </div>      
                      <div class="caption">
                        <p  class="title"><%= app.name%></p>
                        <p><%= app.category.name%></p>
                        <p><%= link_to "查看", show_app_path(app), :class => "btn btn-primary"%></p>
                      </div>
                    </div>
                  </div>
                <%end%>
              </div> 
            <%end%>

            <!--the left apps-->
            <%if (@apps.size % 6) != 0%>
                <div class="row app-list pendding-row">
                  <%@apps[((@apps.size / 6) * 6)..(-1)].each do |app|%>
                    <div class="col-lg-2">
                      <div class="thumbnail">
                        <div class="app-icon">
                          <%= image_tag app.app_icon.url(:thumb)%>  
                        </div>      
                        <div class="caption">
                          <p  class="title"><%= app.name%></p>
                          <p><%= app.category.name%></p>
                          <p><%= link_to "查看", show_app_path(app), :class => "btn btn-primary"%></p>
                        </div>
                      </div>
                    </div>
                  <%end%>
                </div> 
            <%end%>


          <%end%>
          
    	</div>
    </div> <!--col-lg-9-->   
    <div class="col-lg-2">
    	<div class="panel panel-rank">
    		<div class="panel-heading">应用分类</div> 
        <div class="row" id="app_category">
          <div class="col-lg-6 <%= cycle("odd", "even")%>">
            <%= link_to "全部", "/"%>
          </div> 
          <% Category.all.each do |category|%>
            <div class="col-lg-6 <%= cycle("odd", "even")%>">
            <%= link_to "#{category.name}", "/?category=#{category.name}"%>
            </div> 
          <%end%>
        </div>
    	</div>
    </div><!--col-lg-9-->  
    <div class="col-lg-1"></div> 
  </div>
</div>
